<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="45pt"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fans"
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:background="@drawable/ic_arrow_left_black"
            android:layout_marginLeft="15pt"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="45pt"
            android:gravity="center"
            android:textSize="20pt"
            android:textColor="@color/black"
            android:text="添加体重记录"
            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50pt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目前身高"
            android:textColor="#2F2F2F"
            android:textSize="18pt"
            android:layout_marginLeft="47pt"
            />
        <EditText
            android:id="@+id/sg"
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="#2F2F2F"
            android:textSize="18pt"
            android:hint="cm"
            android:layout_marginLeft="120pt"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="245pt"
        android:layout_height="1pt"
        android:layout_marginLeft="47pt"
        android:layout_marginTop="17pt"
        android:background="@color/picture_color_black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17pt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目前体重"
            android:textColor="#2F2F2F"
            android:textSize="18pt"
            android:layout_marginLeft="47pt"
            />
        <EditText
            android:id="@+id/tz"
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="#2F2F2F"
            android:textSize="18pt"
            android:hint="kg"
            android:layout_marginLeft="120pt"
            android:gravity="center"
            />
    </LinearLayout>
<ImageView
    android:layout_width="121pt"
    android:layout_height="33pt"
    android:background="@drawable/bc"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="60pt"
    android:id="@+id/bcun"
    />

</LinearLayout>