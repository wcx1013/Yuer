<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="45pt"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fan"
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:background="@drawable/ic_arrow_left_black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15pt"
            />
        <TextView
            android:id="@id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="45pt"
            android:gravity="center"
            android:textSize="20pt"
            android:textColor="@color/black"
            android:text="宝宝相册"
            />
        <ImageView
            android:layout_width="24pt"
            android:layout_height="24pt"
            android:background="@drawable/bianji"
            android:layout_gravity="right"
            android:layout_marginTop="10pt"
            android:layout_marginRight="68pt"
            android:id="@+id/bjs"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/qxs"
            android:textSize="15pt"
            android:textColor="@color/black"
            android:text="取消"
            android:layout_gravity="right"
            android:layout_marginTop="10pt"
            android:layout_marginRight="68pt"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="24pt"
            android:layout_height="24pt"
            android:background="@drawable/xcshan"
            android:layout_gravity="right"
            android:layout_marginTop="10pt"
            android:layout_marginRight="32pt"
            android:id="@+id/shanc"
            android:visibility="gone"
            />
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="350pt"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent"
        android:id="@+id/xclist"
        android:layout_marginTop="45pt"

        />
    <ImageView
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:background="@drawable/jia"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20pt"
        android:layout_marginBottom="15pt"
        android:id="@+id/adds"
        />
</FrameLayout>