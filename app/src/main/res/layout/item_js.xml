<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47pt"
    android:orientation="horizontal"
    android:layout_marginTop="13pt"
    android:layout_marginLeft="15pt">
    <ImageView
        android:layout_width="9pt"
        android:layout_height="9pt"
        android:background="@drawable/yq"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="11pt"
        />
    <LinearLayout
        android:background="@drawable/tankuang"
        android:layout_width="300pt"
        android:layout_height="match_parent"
        android:layout_marginLeft="10pt"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:layout_gravity="center_vertical"
            android:textColor="#515151"
            android:textSize="14pt"
            android:layout_marginLeft="17pt"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:layout_gravity="center_vertical"
            android:textColor="#515151"
            android:textSize="14pt"
            android:layout_marginRight="8pt"
            />
    </LinearLayout>
</LinearLayout>