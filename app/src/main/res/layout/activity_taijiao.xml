<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="153pt"
            android:background="@drawable/taijiaotop"
            />
        <LinearLayout
            android:layout_marginTop="19pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日听听"
                android:layout_marginLeft="22pt"
                android:textSize="16pt"
                android:textColor="#272727"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0pt"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/tinggg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_marginRight="3pt"
                android:textSize="16pt"
                android:textColor="#272727"
                />
            <ImageView
                android:layout_width="19pt"
                android:layout_height="19pt"
                android:background="@drawable/ic_arrow_right_black"
                android:layout_marginRight="4pt"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tinglist"
            android:layout_marginTop="12pt"
            android:layout_marginLeft="13pt"
            />
        <LinearLayout
            android:layout_marginTop="19pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="儿歌音乐"
                android:layout_marginLeft="22pt"
                android:textSize="16pt"
                android:textColor="#272727"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0pt"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/musicgg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_marginRight="3pt"
                android:textSize="16pt"
                android:textColor="#272727"
                />
            <ImageView
                android:layout_width="19pt"
                android:layout_height="19pt"
                android:background="@drawable/ic_arrow_right_black"
                android:layout_marginRight="4pt"
                />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ergelist"
            android:layout_marginTop="25pt"
            android:layout_marginLeft="22pt"
            />
        </HorizontalScrollView>
        <LinearLayout
            android:layout_marginTop="19pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚安故事"
                android:layout_marginLeft="22pt"
                android:textSize="16pt"
                android:textColor="#272727"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0pt"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/gushigg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:layout_marginRight="3pt"
                android:textSize="16pt"
                android:textColor="#272727"
                />
            <ImageView
                android:layout_width="19pt"
                android:layout_height="19pt"
                android:background="@drawable/ic_arrow_right_black"
                android:layout_marginRight="4pt"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wananlist"
            android:layout_marginLeft="13pt"
            android:layout_marginTop="19pt"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="80pt"/>



    </LinearLayout>

</ScrollView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="31pt"
        android:elevation="8pt"
        android:layout_gravity="center_horizontal|bottom"

        >
        <RelativeLayout

            android:layout_gravity="bottom"
            android:layout_width="341pt"
            android:layout_height="76pt">
            <ImageView
                android:layout_width="76pt"
                android:layout_height="76pt"
                android:background="@drawable/musictx"
                android:id="@+id/sd"
                />
<!--            <SeekBar-->
<!--                android:layout_width="292pt"-->
<!--                android:layout_height="3pt"-->
<!--                android:id="@+id/seekBar"-->
<!--                android:layout_marginLeft="35pt"-->
<!--                />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ha"
                android:textColor="#272727"
                android:textSize="13pt"
                android:layout_toRightOf="@+id/sd"
                android:layout_marginTop="25pt"
                android:layout_marginLeft="9pt"
                />
            <ImageView
                android:layout_width="68pt"
                android:layout_height="68pt"
                android:background="@drawable/zt"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35pt"
                android:layout_marginTop="4pt"
                android:id="@+id/zts"
                />
            <ImageView
                android:layout_width="68pt"
                android:layout_height="68pt"
                android:background="@drawable/fang"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35pt"
                android:layout_marginTop="4pt"
                android:visibility="gone"
                android:id="@+id/fangs"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>